<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Materail Theme-->
    <style name="MatrlAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!--colors-->
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#263238</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>

        <!--cardview-->
        <item name="materialCardViewStyle">@style/AppCard</item>
        <!--cardview shapeappearance-->
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>

    </style>

    <!--Materail Theme-->
    <style name="MatrlAppThemeNoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <!--colors-->
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#263238</item>

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>

        <!--cardview-->
        <item name="materialCardViewStyle">@style/AppCard</item>
        <!--cardview shapeappearance-->
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.MediumComponent</item>

    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">8dp</item>
    </style>

    <style name="AppShapeAppearance.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!--Material theme for buttons not in activity, eg fragments-->
    <style name="MatButton" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorOnSurface">@android:color/holo_orange_light</item>
    </style>





    <!--Material THeme CustomTextInputShapes-->
    <style name="ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!--Button-->
    <style name="ButtonIcon" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!--textAppearance-->
    <style name="TextStyle" parent="">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
    </style>


</resources>
