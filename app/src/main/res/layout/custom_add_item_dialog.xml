<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minHeight="281dp"
    android:minWidth="320dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:text="Create Requisition"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

<!--        <ProgressBar-->
<!--            android:id="@+id/progress_dialog"-->
<!--            style="?android:attr/progressBarStyle"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:progress="25" />-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_add_item_dialog_name"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:textColor="#898989"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customAddItemDialogNameTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundColor="@color/textWhite"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/customAddItemDialogNameTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#b9b9b9"
                        android:hint="@string/add_requisiton_item_name"
                        android:textColorHighlight="@color/colorPrimary"/>
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_add_item_dialog_supplier"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textColor="#898989"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customAddItemDialogSupplierTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundColor="@color/textWhite"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/customAddItemDialogSupplierTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#b9b9b9"
                        android:hint="@string/cutom_add_item_dialog_supplier"
                        android:textColorHighlight="@color/colorPrimary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_add_item_dialog_unit_cost"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textColor="#898989"/>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customAddItemDialogUnitCostTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundColor="@color/textWhite"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/customAddItemDialogUnitCostTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#b9b9b9"
                        android:hint="@string/custom_add_item_dialogg_unit_cost"
                        android:textColorHighlight="@color/colorPrimary"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_add_item_dialog_quantity"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textColor="#898989"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/customAddItemDialogQuantityTextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    app:boxBackgroundColor="@color/textWhite"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.TextInputLayout.Rounded">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/customAddItemDialogQuantityTextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:textSize="16sp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textColor="@android:color/black"
                        android:textColorHint="#b9b9b9"
                        android:hint="@string/custm_add_item_dialogg_quantity"
                        android:textColorHighlight="@color/colorPrimary"/>
                </com.google.android.material.textfield.TextInputLayout>


                <com.victor.loading.rotate.RotateLoading
                    android:id="@+id/customAddItemDialogRotateLoader"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    app:loading_color="@color/createButton1" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/customAddItemDialogAddReqItemId"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:backgroundTint="@color/createButton4"
                        app:icon="@drawable/ic_add"
                        app:iconTint="@color/textWhite"
                        android:text="Add Item"
                        android:textColor="@color/textWhite"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        android:theme="@style/MatButton"
                        app:contentPadding="10dp"
                        app:contentPaddingBottom="0dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/customAddItemDialogCancelId"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:backgroundTint="@color/greyRedErrorCol3"
                        android:text="@string/custom_add_item_dialog_cancel"
                        android:layout_marginStart="9dp"
                        android:textColor="@color/textWhite"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        android:theme="@style/MatButton"
                        app:contentPadding="10dp"
                        app:contentPaddingBottom="0dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        />


                </LinearLayout>


            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>